<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/iv_user_image"-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="90dp"-->
        <!--android:padding="3dp"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:src="@drawable/ic_launcher"-->
        <!--card_view:civ_border_color="@color/drawerCircle"-->
        <!--card_view:civ_border_width="2dp" />-->
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="60dp"
        android:id="@+id/iv_user_image"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher"
        app:civ_border_color="@color/drawerCircle"
        app:civ_border_width="1.2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_user_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:singleLine="true"
            android:text="Kirti "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_user_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Good"
            android:textColor="@color/bel_lightgrey_text"
            android:textSize="18sp" />

        <com.github.ornolfr.ratingview.RatingView
            android:id="@+id/ratingView_review"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:drawable_empty="@drawable/ic_star"
            app:drawable_filled="@drawable/ic_star_fill"
            app:drawable_size="15dp"
            app:is_indicator="true"
            app:max_count="5"
            app:rating="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_user_image"
        android:layout_marginTop="5dp"
        android:background="@color/cardview_dark_background" />
</LinearLayout>

