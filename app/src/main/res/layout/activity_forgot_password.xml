<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/bg_cooking_home"
        android:paddingTop="25dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            android:src="@drawable/ic_back_gray"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_foodie" />

        <!--<TextView-->
            <!--android:id="@+id/tv_title"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="50dp"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:shadowColor="@color/fontShadow"-->
            <!--android:shadowDx="2"-->
            <!--android:shadowDy="15"-->
            <!--android:shadowRadius="25"-->
            <!--android:text="@string/app_name"-->
            <!--android:textColor="@color/colorAppName_cd4a2c"-->
            <!--android:textSize="45sp" />-->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textColor="@color/darkblack"
            android:gravity="center_horizontal"
            android:text="Forgot Password"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_enter_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:layout_marginLeft="@dimen/activity_rightLeft_margin"
            android:layout_marginRight="@dimen/activity_rightLeft_margin"
            android:layout_marginTop="50dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:background="@android:color/transparent"
            android:hint="UserEmail"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/activity_rightLeft_margin"
            android:layout_marginRight="@dimen/activity_rightLeft_margin"
            android:background="@color/viewBackground" />


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_button"
            android:paddingBottom="15dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="15dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/white" />
    </LinearLayout>
